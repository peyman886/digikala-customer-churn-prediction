# =============================================================================
# Environment Variables - Churn Prediction System
# =============================================================================
# Copy this file to .env and update values as needed
# DO NOT commit .env to version control!
#
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=churn_db
DB_USER=ds_user
DB_PASSWORD=ds_pass

# Full connection URL (alternative to individual settings)
DATABASE_URL=postgresql://ds_user:ds_pass@db:5432/churn_db

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_PORT=9000
LOG_LEVEL=INFO

# Device: auto (detect GPU), cuda, cpu
DEVICE=auto

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
MODEL_DIR=./models_v2
FEATURES_PATH=./user_features.csv

# Model architecture (must match training)
NUM_FEATURES=98
D_TOKEN=64
N_BLOCKS=3
N_HEADS=4
DROPOUT=0.2

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
FRONTEND_PORT=8501

# -----------------------------------------------------------------------------
# MLflow Configuration
# -----------------------------------------------------------------------------
MLFLOW_PORT=5000
MLFLOW_TRACKING_URI=http://localhost:5000

# -----------------------------------------------------------------------------
# Jupyter Configuration (Development)
# -----------------------------------------------------------------------------
JUPYTER_PORT=8888
JUPYTER_TOKEN=churn123

# -----------------------------------------------------------------------------
# PgAdmin Configuration (Development)
# -----------------------------------------------------------------------------
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@local.dev
PGADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=False
